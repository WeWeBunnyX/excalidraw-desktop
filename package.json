{
  "name": "excalidraw",
  "productName": "Excalidraw",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:appimage": "electron-builder --linux AppImage",
    "dist:deb": "electron-builder --linux deb"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Excalidraw desktop application for Linux, Windows, and Mac.",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5"
  },
  "build": {
    "appId": "app.excalidraw",
    "productName": "Excalidraw",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "index.js",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.graphics-design",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "portable",
        "msi"
      ],
      "icon": "build/icon2.ico"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Graphics",
      "maintainer": "WeWeBunnyX <145664273+WeWeBunnyX@users.noreply.github.com>"
    }
  }
}